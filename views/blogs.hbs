<h1>{{title}}</h1>

{{#each blogsData}}
  <article class='modal-content has-background-white py-5 px-5'>
    <h3 class='title mb-2'>{{this.blog_title}}</h3>
    <div class='location-container is-flex is-align-items-center mb-2'>
      <i class='fas fa-map-marker-alt'></i>
      <p class='ml-2'>{{this.user_id}}</p>
    </div>
    <div class='expiration-container is-flex is-align-items-center mb-2'>
      <i class='fas fa-calendar-day'></i>
      <p class='ml-2'>Created Date: {{this.created_at}}</p>
    </div>
    <p class='job-description mb-2'>{{this.blog_body}}</p>
  </article>
{{/each}}
<form>
  <div class='field'>
    <div class='field'>
      <label class='label'>Comments</label>
      <div class='control'>
        <textarea
          class='textarea'
          id='comment'
          type='text'
          value=''
           {{#if signedIn}}
                  placeholder='Leave a comment'
                  {{/if}}
          required
        {{#if loggedOut}}
        placeholder='Sign in to comment'
          disabled
        {{/if}}
        /></textarea>
        <footer class="is-flex is-justify-content-space-between">
             {{#if signedIn}}
  <div class='field'>
    <div class='buttons'>
      <button id='create-comment' , class='button is-small is-success'>Add
        Comment</button>
    </div>
  </div>
      {{/if}}
                    <a class="" target="_blank" href="https://guides.github.com/features/mastering-markdown/">
            Styling with Markdown is supported
          </a>

        </footer>
      </div>
    </div>
  </div>
</form>
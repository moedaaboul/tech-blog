<li class='card mb-5'>
  <article class='modal-content has-background-white py-5 px-5'>
    <h3 class='title mb-2' id='{{id}}'>{{blog_title}}</h3>
    <div class='location-container is-flex is-align-items-center mb-2'>
      <i class='fas fa-map-marker-alt'></i>
      <p class='ml-2'>{{user_id}}</p>
    </div>
    <div class='expiration-container is-flex is-align-items-center mb-2'>
      <i class='fas fa-calendar-day'></i>
      <p class='ml-2'>Created Date: {{format_time createdAt}}</p>
    </div>
    <p class='job-description mb-2'>{{blog_body}}</p>
  </article>
</li>